---
import { Image } from "astro:assets";
interface Props {
  image?: string;
}
const {
    image = "assets/logo.svg",
} = Astro.props
---

<div class="mt-4">
    <div class="h-screen w-full bg-black">
        <div class="mx-auto max-w-7xl pt-16 sm:pt-24">
            <div class="space-y-8 lg:space-y-0 lg:grid lg:grid-cols-12 lg:gap-8">
                <div class="px-6 sm:text-center md:mx-auto md:max-w-2xl lg:col-span-6 lg:flex lg:items-center lg:text-left">
                    <div class="space-y-8">
                        <div class="space-y-4">
                            <div class="space-y-2">
                                
                                <Image 
                                    src="/assets/logo.svg"
                                    alt="logo"
                                    width={100}
                                    height={220}
                                    class="rounded-full bg-green-300 px-2 py-0.3" />
                                
                                <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl md:text-6xl">
                                    <span class="sm:text-6xl">
                                    </span> Centro Umbandista 
                                    <span
                                        class="font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-pink-600">Reino da Mata
                                    </span>
                                    <br>
                                    Ciencia, filosófia, arte y religión.
                                </h1>
                            </div>
    
                            <p class="text-base text-gray-200 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl">
                                Somos una institución que trabaja en pro de la difusión, la investigación y el estudio de la 
                                religión Umbandista y las distintas tradiciones y escuelas religiosas afro-amerindias. 
                                Creando cursos, talleres y seminarios sobre la difusión de estas culturas.
                            </p>
    
                        </div>
    
                        <div class="border-t border-gray-700"></div>
    
                    </div>
                </div>
    
                <div class="flex items-center w-full col-span-6">
                    <div class="px-6 h-96 lg:h-100% w-full max-w-2xl col-span-6 flex items-center mx-auto">
                        <div style="width: 100%; height: 100%;">
                            <div style="width: 100%; height: 100%;">
                                
                                <div style="padding:56.25% 0 0 0;position:relative;flex-wrap:wrap;"><iframe src="https://player.vimeo.com/video/455591671?badge=0&amp;autopause=0&amp;player_id=0&amp;app_id=58479" frameborder="0" allow="autoplay; fullscreen; picture-in-picture; clipboard-write" style="position:absolute;top:0;left:0;width:100%;height:100%;" title="DoctrinaSobreHiervas"></iframe></div><script src="https://player.vimeo.com/api/player.js"></script>
                            </div>
                        </div>
                    </div>
                </div>
    
            </div>
        </div>
    </div>
</div>