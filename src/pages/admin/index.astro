  import { onAuthStateChanged } from 'firebase/auth';
  import { auth } from '@/core/firebase/config';

  // Cargar información del usuario
  onAuthStateChanged(auth, (user) => {
    if (user) {
      const emailElement = document.getElementById('admin-email');
      if (emailElement) {
        emailElement.textContent = user.email || 'Admin';
      }
    }
  });

  // Aquí puedes agregar lógica para cargar métricas en tiempo real
  // Por ahora mostramos placeholders
  setTimeout(() => {
    const activeSubsElement = document.getElementById('active-subs-count');
    const monthlyRevenueElement = document.getElementById('monthly-revenue');
    const articlesCountElement = document.getElementById('articles-count');
    const eventsCountElement = document.getElementById('events-count');

    if (activeSubsElement) activeSubsElement.textContent = '0';
    if (monthlyRevenueElement) monthlyRevenueElement.textContent = '$0';
    if (articlesCountElement) articlesCountElement.textContent = '0';
    if (eventsCountElement) eventsCountElement.textContent = '0';
  }, 500);
</script>
