---
import MainLayout from "@/layouts/MainLayout.astro";
import AdminProtection from "@/components/AdminProtection";

export const prerender = false;
---

<MainLayout title="Gestión de Suscripciones | Admin">
  <AdminProtection client:load>
    <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
      <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Header -->
        <div class="mb-8">
          <div class="flex items-center justify-between">
            <div>
              <div class="flex items-center gap-3 mb-2">
                <a href="/admin" class="text-gray-400 hover:text-white transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                  </svg>
                </a>
                <h1 class="text-4xl font-bold text-white">Gestión de Suscripciones</h1>
              </div>
              <p class="text-gray-400 text-lg ml-9">Administra planes, usuarios premium y pagos</p>
            </div>
            <button id="create-plan-btn" class="px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-medium rounded-lg transition-colors flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Crear Plan
            </button>
          </div>
        </div>

        <!-- Estadísticas rápidas -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
          <div class="bg-slate-800/50 backdrop-blur-sm border border-blue-500/20 rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="p-3 bg-blue-500/20 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              </div>
            </div>
            <p class="text-gray-400 text-sm mb-1">Suscriptores Activos</p>
            <p id="stat-active" class="text-3xl font-bold text-white">--</p>
          </div>

          <div class="bg-slate-800/50 backdrop-blur-sm border border-emerald-500/20 rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="p-3 bg-emerald-500/20 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
            </div>
            <p class="text-gray-400 text-sm mb-1">MRR (Ingresos Mensuales)</p>
            <p id="stat-mrr" class="text-3xl font-bold text-white">--</p>
          </div>

          <div class="bg-slate-800/50 backdrop-blur-sm border border-purple-500/20 rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="p-3 bg-purple-500/20 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
              </div>
            </div>
            <p class="text-gray-400 text-sm mb-1">Nuevos Este Mes</p>
            <p id="stat-new" class="text-3xl font-bold text-white">--</p>
          </div>

          <div class="bg-slate-800/50 backdrop-blur-sm border border-red-500/20 rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="p-3 bg-red-500/20 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </div>
            </div>
            <p class="text-gray-400 text-sm mb-1">Cancelaciones</p>
            <p id="stat-cancelled" class="text-3xl font-bold text-white">--</p>
          </div>
        </div>

        <!-- Tabs -->
        <div class="mb-6">
          <div class="border-b border-slate-700">
            <nav class="flex gap-8">
              <button id="tab-plans" class="tab-button active pb-4 px-1 border-b-2 border-blue-500 text-blue-400 font-medium">
                Planes
              </button>
              <button id="tab-users" class="tab-button pb-4 px-1 border-b-2 border-transparent text-gray-400 hover:text-white font-medium">
                Suscriptores
              </button>
              <button id="tab-analytics" class="tab-button pb-4 px-1 border-b-2 border-transparent text-gray-400 hover:text-white font-medium">
                Análisis
              </button>
            </nav>
          </div>
        </div>

        <!-- Content: Planes -->
        <div id="content-plans" class="tab-content">
          <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-xl p-6">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-2xl font-bold text-white">Planes de Suscripción</h2>
              <div class="text-sm text-gray-400">
                <span id="plans-count">0</span> planes configurados
              </div>
            </div>

            <!-- Loading state -->
            <div id="plans-loading" class="flex justify-center py-12">
              <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500"></div>
            </div>

            <!-- Plans grid -->
            <div id="plans-grid" class="hidden grid md:grid-cols-2 lg:grid-cols-4 gap-6">
              <!-- Los planes se cargarán aquí dinámicamente -->
            </div>
          </div>
        </div>

        <!-- Content: Suscriptores -->
        <div id="content-users" class="tab-content hidden">
          <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-xl p-6">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-2xl font-bold text-white">Usuarios Suscritos</h2>
              <div class="flex items-center gap-4">
                <input
                  type="search"
                  id="search-users"
                  placeholder="Buscar por email..."
                  class="px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
                <select id="filter-plan" class="px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                  <option value="">Todos los planes</option>
                  <option value="free">Gratuito</option>
                  <option value="colaborador">Colaborador</option>
                  <option value="investigador">Investigador</option>
                  <option value="institucion">Institución</option>
                </select>
              </div>
            </div>

            <!-- Loading state -->
            <div id="users-loading" class="flex justify-center py-12">
              <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500"></div>
            </div>

            <!-- Users table -->
            <div id="users-table" class="hidden overflow-x-auto">
              <table class="w-full">
                <thead>
                  <tr class="border-b border-slate-700">
                    <th class="text-left py-3 px-4 text-gray-400 font-medium">Usuario</th>
                    <th class="text-left py-3 px-4 text-gray-400 font-medium">Plan</th>
                    <th class="text-left py-3 px-4 text-gray-400 font-medium">Estado</th>
                    <th class="text-left py-3 px-4 text-gray-400 font-medium">Inicio</th>
                    <th class="text-left py-3 px-4 text-gray-400 font-medium">Vencimiento</th>
                    <th class="text-left py-3 px-4 text-gray-400 font-medium">Acciones</th>
                  </tr>
                </thead>
                <tbody id="users-tbody" class="text-white">
                  <!-- Las filas se cargarán aquí dinámicamente -->
                </tbody>
              </table>
            </div>

            <!-- Empty state -->
            <div id="users-empty" class="hidden text-center py-12">
              <p class="text-gray-400">No hay suscriptores aún</p>
            </div>
          </div>
        </div>

        <!-- Content: Analytics -->
        <div id="content-analytics" class="tab-content hidden">
          <div class="grid lg:grid-cols-2 gap-6">
            <!-- Gráfico de suscripciones por mes -->
            <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-xl p-6">
              <h3 class="text-xl font-bold text-white mb-4">Suscripciones por Mes</h3>
              <div id="chart-monthly" class="h-64 flex items-center justify-center text-gray-400">
                Gráfico en desarrollo
              </div>
            </div>

            <!-- Distribución por plan -->
            <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-xl p-6">
              <h3 class="text-xl font-bold text-white mb-4">Distribución por Plan</h3>
              <div id="chart-distribution" class="h-64">
                <!-- Aquí iría un gráfico de dona/pie -->
                <div class="flex flex-col gap-4">
                  <div class="flex items-center justify-between p-3 bg-slate-700/30 rounded-lg">
                    <div class="flex items-center gap-3">
                      <div class="w-4 h-4 bg-gray-500 rounded"></div>
                      <span class="text-white">Gratuito</span>
                    </div>
                    <span id="dist-free" class="text-gray-400">--</span>
                  </div>
                  <div class="flex items-center justify-between p-3 bg-slate-700/30 rounded-lg">
                    <div class="flex items-center gap-3">
                      <div class="w-4 h-4 bg-blue-500 rounded"></div>
                      <span class="text-white">Colaborador</span>
                    </div>
                    <span id="dist-colaborador" class="text-gray-400">--</span>
                  </div>
                  <div class="flex items-center justify-between p-3 bg-slate-700/30 rounded-lg">
                    <div class="flex items-center gap-3">
                      <div class="w-4 h-4 bg-purple-500 rounded"></div>
                      <span class="text-white">Investigador</span>
                    </div>
                    <span id="dist-investigador" class="text-gray-400">--</span>
                  </div>
                  <div class="flex items-center justify-between p-3 bg-slate-700/30 rounded-lg">
                    <div class="flex items-center gap-3">
                      <div class="w-4 h-4 bg-emerald-500 rounded"></div>
                      <span class="text-white">Institución</span>
                    </div>
                    <span id="dist-institucion" class="text-gray-400">--</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </AdminProtection>
</MainLayout>

<script>
  import { SubscriptionService } from '@/features/subscriptions';
  import { PlanService } from '@/features/subscriptions';

  // Tab switching
  const tabButtons = document.querySelectorAll('.tab-button');
  const tabContents = document.querySelectorAll('.tab-content');

  tabButtons.forEach((button) => {
    button.addEventListener('click', () => {
      const tabId = button.id.replace('tab-', 'content-');

      // Update button states
      tabButtons.forEach(btn => {
        btn.classList.remove('active', 'border-blue-500', 'text-blue-400');
        btn.classList.add('border-transparent', 'text-gray-400');
      });
      button.classList.add('active', 'border-blue-500', 'text-blue-400');
      button.classList.remove('border-transparent', 'text-gray-400');

      // Update content visibility
      tabContents.forEach(content => content.classList.add('hidden'));
      document.getElementById(tabId)?.classList.remove('hidden');
    });
  });

  // Load initial data
  async function loadDashboardData() {
    try {
      // Load statistics
      const stats = await SubscriptionService.getSubscriptionStats();

      document.getElementById('stat-active')!.textContent = stats.active.toString();
      document.getElementById('stat-mrr')!.textContent = `$${stats.monthlyRevenue.toLocaleString('es-UY')}`;
      document.getElementById('stat-new')!.textContent = '0'; // TODO: Calculate
      document.getElementById('stat-cancelled')!.textContent = stats.cancelled.toString();

      // Load plans
      await loadPlans();

      // Load distribution
      updateDistribution(stats.byPlan);
    } catch (error) {
      console.error('Error loading dashboard data:', error);
    }
  }

  async function loadPlans() {
    const plansGrid = document.getElementById('plans-grid');
    const plansLoading = document.getElementById('plans-loading');
    const plansCount = document.getElementById('plans-count');

    try {
      const plans = await PlanService.getAllPlans();

      if (plansLoading) plansLoading.classList.add('hidden');
      if (plansGrid) plansGrid.classList.remove('hidden');
      if (plansCount) plansCount.textContent = plans.length.toString();

      // Render plans (placeholder)
      if (plansGrid) {
        plansGrid.innerHTML = plans.map(plan => `
          <div class="bg-slate-700/30 border border-slate-600/50 rounded-lg p-4">
            <h3 class="text-lg font-bold text-white mb-2">${plan.name}</h3>
            <p class="text-2xl font-bold text-blue-400 mb-2">$${plan.price.monthly}</p>
            <p class="text-sm text-gray-400">${plan.description}</p>
            <div class="mt-4 flex gap-2">
              <button class="px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-500">
                Editar
              </button>
              <button class="px-3 py-1 bg-red-600 text-white text-sm rounded hover:bg-red-500">
                Eliminar
              </button>
            </div>
          </div>
        `).join('');
      }
    } catch (error) {
      console.error('Error loading plans:', error);
    }
  }

  function updateDistribution(byPlan: Record<string, number>) {
    document.getElementById('dist-free')!.textContent = (byPlan['free'] || 0).toString();
    document.getElementById('dist-colaborador')!.textContent = (byPlan['colaborador'] || 0).toString();
    document.getElementById('dist-investigador')!.textContent = (byPlan['investigador'] || 0).toString();
    document.getElementById('dist-institucion')!.textContent = (byPlan['institucion'] || 0).toString();
  }

  // Initialize on load
  document.addEventListener('astro:page-load', () => {
    loadDashboardData();
  });
</script>

<style>
  .tab-button.active {
    border-color: rgb(59 130 246) !important;
    color: rgb(96 165 250) !important;
  }
</style>
