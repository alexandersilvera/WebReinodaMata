        console.log('üìù Renderizado: No hay art√≠culos para mostrar');
      } else {
        const articlesHTML = filteredArticles.map(article => renderArticle(article, false)).join('');
        console.log('üî§ HTML generado para art√≠culos (primeros 300 chars):', articlesHTML.substring(0, 300) + '...');
        articlesListElement.innerHTML = articlesHTML;
        console.log(`üìù Renderizados ${filteredArticles.length} art√≠culos`);
        console.log('üîç Elemento DOM despu√©s del renderizado:', articlesListElement.children.length, 'elementos hijos');
