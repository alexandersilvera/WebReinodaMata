        if (loadingElement) {
          loadingElement.classList.add("hidden");
          console.log('[Form] ‚úÖ Loading oculto');
        } else {
          console.error('[Form] ‚ùå Loading element no encontrado');
        }
        
        if (articleFormContainer) {
