---
/**
 * Landing Page V2 - Centro Umbandista Reino Da Mata
 * Nueva versión con Hero moderno y secciones optimizadas
 */
import MainLayout from "@/layouts/MainLayout.astro";
import Hero from "@/components/landing/Hero.astro";
import AboutSection from "@/components/landing/AboutSection.astro";
import UpcomingEventsHome from "@/components/landing/UpcomingEventsHome";
import LatestBlogPosts from "@/components/landing/LatestBlogPosts";
import ErrorBoundary from "@/components/ErrorBoundary";
---

<MainLayout
  title="Inicio | Centro Umbandista Reino Da Mata"
  description="Centro Umbandista Reino Da Mata - Un espacio sagrado para el crecimiento espiritual, el conocimiento y la comunidad. Práctica auténtica de la Umbanda en Uruguay."
>
  <!-- Hero Section -->
  <div class="-mt-6">
    <Hero />
  </div>

  <!-- Sección Sobre Nosotros con galería de imágenes -->
  <AboutSection />

  <!-- Sección Próximos Eventos con Error Boundary -->
  <ErrorBoundary client:load>
    <UpcomingEventsHome client:load />
  </ErrorBoundary>

  <!-- Sección Últimos Artículos del Blog con Error Boundary -->
  <ErrorBoundary client:load>
    <LatestBlogPosts client:load />
  </ErrorBoundary>

  <!-- CTA Final -->
  <section class="py-20 bg-gradient-to-b from-gray-800 to-gray-900">
    <div class="container mx-auto px-4 text-center scroll-animate">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        ¿Listo para Comenzar tu Camino Espiritual?
      </h2>
      <p class="text-xl text-gray-300 mb-10 max-w-2xl mx-auto">
        Únete a nuestra comunidad y descubre el poder transformador de la Umbanda
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/contacto"
          class="px-8 py-4 bg-green-600 hover:bg-green-500 text-white font-semibold rounded-lg text-lg transition-all transform hover:scale-105 shadow-lg hover-shine hover-glow"
        >
          Contactános
        </a>
        <a
          href="/eventos"
          class="px-8 py-4 bg-transparent hover:bg-white/10 text-white font-semibold rounded-lg text-lg transition-all border-2 border-white hover-lift"
        >
          Ver Eventos
        </a>
      </div>
    </div>
  </section>
</MainLayout>
