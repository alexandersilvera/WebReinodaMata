---
import MainLayout from "@/layouts/MainLayout.astro";
---

<MainLayout title="Recuperar Contraseña - Reino da Mata" description="Recupera tu contraseña.">
  <div class="container mx-auto px-4 py-12 max-w-md">
    <h1 class="text-3xl font-bold text-center text-[#F08F4A] mb-4">Recuperar Contraseña</h1>
    <p class="text-center text-gray-400 mb-8">
      Ingresa tu correo electrónico y te enviaremos un enlace para restablecer tu contraseña.
    </p>

    <form id="reset-form" class="space-y-6 bg-[#1f1e23] p-8 rounded-lg shadow-lg">
      <div>
        <label for="email" class="block text-sm font-medium text-gray-300 mb-1">Correo Electrónico</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-4 py-2 bg-[#2a292e] border border-gray-600 rounded-md text-white focus:ring-[#F08F4A] focus:border-[#F08F4A] transition"
          placeholder="tu@email.com"
        >
      </div>

      <button
        type="submit"
        id="submit-button"
        class="w-full bg-[#F08F4A] hover:bg-[#D9734E] text-white font-bold py-2 px-4 rounded-md transition duration-300 ease-in-out disabled:opacity-50 disabled:cursor-not-allowed"
      >
        Enviar Enlace de Recuperación
      </button>

      <div id="error-message" class="text-red-500 text-sm mt-4 text-center hidden"></div>
      <div id="success-message" class="text-green-500 text-sm mt-4 text-center hidden"></div>

      <p class="text-center text-sm text-gray-400 mt-4">
        ¿Recordaste tu contraseña? <a href="/login" class="text-[#F08F4A] hover:underline">Inicia sesión aquí</a>
      </p>
    </form>
  </div>
</MainLayout>

<script>
  import { auth, sendPasswordResetEmail } from "../core/firebase/config.js";
  import { isBlocked, recordFailedAttempt, recordSuccessfulAttempt, formatBlockTime } from "../core/auth/rateLimiter.js";

  const resetForm = document.getElementById('reset-form') as HTMLFormElement;
  const emailInput = document.getElementById('email') as HTMLInputElement;
  const submitButton = document.getElementById('submit-button') as HTMLButtonElement;
  const errorMessageDiv = document.getElementById('error-message') as HTMLDivElement;
  const successMessageDiv = document.getElementById('success-message') as HTMLDivElement;

  // Verificar si está bloqueado al cargar
  function checkBlockStatus() {
    const blockStatus = isBlocked('forgot-password');
    if (blockStatus.blocked && blockStatus.remainingTime) {
      submitButton.disabled = true;
      errorMessageDiv.textContent = `Demasiados intentos. Intenta de nuevo en ${formatBlockTime(blockStatus.remainingTime)}.`;
      errorMessageDiv.classList.remove('hidden');

      const interval = setInterval(() => {
        const newStatus = isBlocked('forgot-password');
        if (!newStatus.blocked) {
          clearInterval(interval);
          submitButton.disabled = false;
          errorMessageDiv.textContent = '';
          errorMessageDiv.classList.add('hidden');
        } else if (newStatus.remainingTime) {
          errorMessageDiv.textContent = `Demasiados intentos. Intenta de nuevo en ${formatBlockTime(newStatus.remainingTime)}.`;
        }
      }, 1000);
    }
  }

  checkBlockStatus();

  resetForm.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Verificar si está bloqueado
    const blockStatus = isBlocked('forgot-password');
    if (blockStatus.blocked) {
      return;
    }

    errorMessageDiv.textContent = '';
    errorMessageDiv.classList.add('hidden');
    successMessageDiv.textContent = '';
    successMessageDiv.classList.add('hidden');
    submitButton.disabled = true;
    submitButton.textContent = 'Enviando...';

    const email = emailInput.value;

    try {
      await sendPasswordResetEmail(auth, email);

      // Éxito - resetear contador
      recordSuccessfulAttempt('forgot-password');

      // Mostrar mensaje de éxito
      successMessageDiv.textContent = 'Se ha enviado un enlace de recuperación a tu correo electrónico. Revisa tu bandeja de entrada.';
      successMessageDiv.classList.remove('hidden');

      // Limpiar el formulario
      emailInput.value = '';

      // Redirigir al login después de 5 segundos
      setTimeout(() => {
        window.location.href = '/login';
      }, 5000);

    } catch (error: any) {
      console.error("Reset password error:", error);

      // Registrar intento fallido
      const result = recordFailedAttempt('forgot-password');

      let friendlyMessage = "Error al enviar el enlace de recuperación.";

      switch (error.code) {
        case 'auth/user-not-found':
          friendlyMessage = "No existe una cuenta con este correo electrónico.";
          break;
        case 'auth/invalid-email':
          friendlyMessage = "El formato del correo electrónico no es válido.";
          break;
        case 'auth/too-many-requests':
          friendlyMessage = "Demasiados intentos. Por favor, espera unos minutos.";
          break;
        case 'auth/network-request-failed':
          friendlyMessage = "Error de conexión. Verifica tu internet.";
          break;
      }

      if (result.blocked) {
        friendlyMessage = "Demasiados intentos. Tu acceso ha sido bloqueado temporalmente por 15 minutos.";
        checkBlockStatus();
      }

      errorMessageDiv.textContent = friendlyMessage;
      errorMessageDiv.classList.remove('hidden');
      submitButton.disabled = result.blocked;
      submitButton.textContent = 'Enviar Enlace de Recuperación';
    }
  });
</script>
