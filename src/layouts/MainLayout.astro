---
// import { ViewTransitions } from 'astro:transitions'; // <-- Comentado para prueba
import BaseHead from "@/components/BaseHead.astro";
import NavigationNew from "@/components/NavigationNew.astro";
import Footer from "@/components/Footer.astro";
import PageViewTracker from "@/components/PageViewTracker";

interface Props {
	title: string;
	description?: string;
}
const { title, description } = Astro.props;

---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={title} description={description} />
		<!-- <ViewTransitions /> --> <!-- <-- Comentado para prueba -->
	</head>
	<body class="bg-dark-blue py-6 flex flex-col min-h-screen">
		<!-- Auth Recovery Script -->
		<script src="/auth-recovery.js" is:inline></script>
		
		<!-- Rastreador de vistas de pÃ¡gina -->
		<PageViewTracker client:load />
		
		<NavigationNew />
		<main class="flex-grow">
			<slot />
		</main>
		<Footer />
	</body>
</html>
