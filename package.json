	"scripts": {
		"dev": "astro dev",
		"start": "astro dev",
		"build": "astro check && astro build",
		"build:vercel": "astro check && astro build",
		"preview": "astro preview",
		"astro": "astro",
		"format": "prettier --write . --plugin=prettier-plugin-astro",
		"lint": "eslint . --ext .js,.ts,.astro",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest --watch",
		"security:check": "node scripts/verify-security.cjs",
		"pre-deploy": "npm run lint && npm run security:check && npm run test:run && npm run build",
		"deploy:staging": "npm run pre-deploy && firebase deploy --only hosting",
		"deploy:functions": "firebase deploy --only functions",
		"deploy:production": "npm run pre-deploy && firebase deploy"
	},
